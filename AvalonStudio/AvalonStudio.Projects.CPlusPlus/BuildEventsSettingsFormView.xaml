<UserControl x:Class="AvalonStudio.Projects.CPlusPlus.BuildEventsSettingsFormView"
             xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel>
    <StackPanel Spacing="4">
      <TextBox UseFloatingWatermark="true" Watermark="Pre-build event command line:" Text="{Binding PreBuildCommands}" AcceptsReturn="True" Height="200" />
      <TextBox UseFloatingWatermark="true" Watermark="Post-build event command line:" Text="{Binding PostBuildCommands}" AcceptsReturn="True" Height="200" />
    </StackPanel>
  </StackPanel>
</UserControl>