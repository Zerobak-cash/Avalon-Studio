<UserControl x:Class="AvalonStudio.Toolchains.CustomGCC.GccProfilesSettingsView"
             xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBox Text="{Binding InstanceName}" Watermark="InstanceName" />
        <TextBlock Text="{Binding BasePath}" />
        <Button Content="Browse" Command="{Binding BrowseCommand}" />
        <Button Content="Save Profile" Command="{Binding SaveCommand}" />
        <ListBox Items="{Binding Profiles}" SelectedItem="{Binding SelectedProfile}" />
    </StackPanel>    
</UserControl>
     